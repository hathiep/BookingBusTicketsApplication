<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#FFFFFF"
    tools:context=".DBXe.XeInformation">
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rl_bg">

        <ImageView
            android:id="@+id/tt_anhXe"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/tt_tenXe"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/tt_tenXe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhà Xe"
            android:textSize="30sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tt_bienSo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biển số: "
            android:textSize="15sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/tt_tenXe"
            android:layout_toRightOf="@id/tt_anhXe"/>

        <TextView
            android:id="@+id/tt_loaiXe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tt_anhXe"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/tt_bienSo"
            android:layout_marginTop="10dp"
            android:text="Loại xe:"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tt_soGhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tt_loaiXe"
            android:layout_below="@+id/tt_bienSo"
            android:layout_marginTop="10dp"
            android:text="Số ghế:"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tt_tuyen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tt_loaiXe"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tt_anhXe"
            android:text="Tuyến:"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tt_giaVe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tt_tuyen"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/tt_anhXe"
            android:text="Giá vé:"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <Button
        android:id="@+id/tt_btThem"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rl"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_bg"
        android:text="Thêm vào yêu thích"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_below="@+id/tt_btThem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rl_bg">

        <TextView
            android:id="@+id/tt_mauXe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Màu xe: "
            android:textSize="15sp"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tt_sdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tt_mauXe"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="SĐT:"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tt_lichTrinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tt_sdt"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:text="Lịch trình:"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>


</RelativeLayout>