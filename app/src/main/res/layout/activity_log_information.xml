    <RelativeLayout
        android:id="@+id/rlLog2"
        android:layout_below="@+id/rlLog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/rl_bg"
        android:padding="10dp">

        <TextView
            android:id="@+id/tt_mauXeLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Màu xe: "
            android:textSize="15sp"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tt_sdtLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tt_mauXeLog"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="SĐT:"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tt_lichTrinhLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tt_sdtLog"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:text="Lịch trình:"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>


</RelativeLayout>